CompileFlags:
  Add:
    - -std=c++20
    - -D_CRT_SECURE_NO_WARNINGS
    - -DUNICODE
    - -D_UNICODE
    - -DNOMINMAX
    - -DWIN32_LEAN_AND_MEAN
    - -Waddress
    - -Warray-bounds
    - -Wbool-operation
    - -Wchar-subscripts
    - -Wcomment
    - -Wconversion
    - -Wdouble-promotion
    - -Wformat
    - -Wformat-security
    - -Wimplicit-fallthrough
    - -Wmisleading-indentation
    - -Wmissing-braces
    - -Wnull-dereference
    - -Wold-style-cast
    - -Wcast-align
    - -Wcast-qual
    - -Wfloat-equal
    - -Wreorder
    - -Wshadow
    - -Wsign-compare
    - -Wstrict-aliasing
    - -Wswitch
    - -Wtautological-compare
    - -Wunknown-pragmas
    - -Wuninitialized
    - -Wconditional-uninitialized
    - -Wsometimes-uninitialized
    - -Wunsequenced
    - -Wunused-function
    - -Wunused-label
    - -Wunused-value
    - -Wunused-variable

Diagnostics:
  ClangTidy:
    Add:
      - clang-analyzer-core.uninitialized.Assign
      - clang-analyzer-core.uninitialized.Branch
      - clang-analyzer-core.uninitialized.CapturedBlockVariable
      - clang-analyzer-core.uninitialized.UndefReturn
      - clang-analyzer-cplusplus.NewDelete
      - clang-analyzer-core.CallAndMessage
